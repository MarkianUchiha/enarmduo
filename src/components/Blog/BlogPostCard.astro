---
import { getCollection } from 'astro:content';

interface Props {
	post: {
		id: string;
		slug: string;
		data: {
			title: string;
			description: string;
			date: Date;
			author: string;
			category: string;
			image?: string;
			featured?: boolean;
			readingTime?: number;
		};
	};
}

const { post } = Astro.props;

// Formatear fecha en español
const formatDate = (date: Date) => {
	return new Intl.DateTimeFormat('es-MX', {
		year: 'numeric',
		month: 'long',
		day: 'numeric'
	}).format(date);
};

// Obtener slug del post
const postUrl = `/blog/${post.slug}`;
---

<article class="blog-post-card group relative bg-white rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100">
	<!-- Imagen destacada -->
	{post.data.image && (
		<div class="relative aspect-video overflow-hidden bg-gradient-to-br from-blue-50 to-blue-100">
			<img 
				src={post.data.image} 
				alt={post.data.title}
				class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
			/>
			{post.data.featured && (
				<span class="absolute top-4 left-4 text-white text-xs font-semibold px-3 py-1 rounded-full" style="background-color: #546de5;">
					Destacado
				</span>
			)}
		</div>
	)}

	<!-- Contenido -->
	<div class="p-6">
		<!-- Categoría -->
		<div class="flex items-center gap-3 mb-3">
			<span class="text-xs font-semibold px-3 py-1 rounded-full" style="color: #546de5; background-color: #eff4ff;">
				{post.data.category}
			</span>
			{post.data.readingTime && (
				<span class="text-xs text-gray-500 flex items-center gap-1">
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
					</svg>
					{post.data.readingTime} min de lectura
				</span>
			)}
		</div>

		<!-- Título -->
		<h3 class="text-xl font-bold text-gray-900 mb-2 transition-colors blog-post-title">
			<a href={postUrl} class="block">
				{post.data.title}
			</a>
		</h3>

		<!-- Descripción -->
		<p class="text-gray-600 text-sm leading-relaxed mb-4 line-clamp-2">
			{post.data.description}
		</p>

		<!-- Meta información -->
		<div class="flex items-center justify-between pt-4 border-t border-gray-100">
			<div class="flex items-center gap-2">
				<div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center">
					<span class="text-white text-xs font-semibold">
						{post.data.author.charAt(0)}
					</span>
				</div>
				<div>
					<p class="text-sm font-medium text-gray-900">{post.data.author}</p>
					<p class="text-xs text-gray-500">{formatDate(post.data.date)}</p>
				</div>
			</div>

			<!-- Botón leer más -->
			<a 
				href={postUrl}
				class="text-sm font-semibold flex items-center gap-1 group-hover:gap-2 transition-all"
				style="color: #546de5;"
			>
				Leer más
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
				</svg>
			</a>
		</div>
	</div>
</article>

<style>
	.blog-post-card {
		@apply cursor-pointer;
	}

	/* Límite de líneas para descripción */
	.line-clamp-2 {
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	/* Hover en título del post */
	.blog-post-title a:hover {
		color: #546de5;
	}
</style>
