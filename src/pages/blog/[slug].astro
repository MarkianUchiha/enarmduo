---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/core/Header.astro';
import Footer from '../../components/core/Footer.astro';
import { getCollection } from 'astro:content';

// Obtener todos los posts para generar rutas estáticas
export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map(post => ({
		params: { slug: post.slug },
		props: { post },
	}));
}

// Obtener el post actual
const { post } = Astro.props;
const { Content } = await post.render();

// Formatear fecha en español
const formatDate = (date: Date) => {
	return new Intl.DateTimeFormat('es-MX', {
		year: 'numeric',
		month: 'long',
		day: 'numeric'
	}).format(date);
};

// Obtener posts relacionados (misma categoría, excluyendo el actual)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
	.filter(p => p.data.category === post.data.category && p.slug !== post.slug)
	.slice(0, 3);
---

<Layout title={`${post.data.title} - Blog EnarmDuo`}>
	<Header />
	
	<article class="min-h-screen bg-gray-50">
		<!-- Header del post -->
		<header class="bg-gradient-to-br from-blue-50 to-white pt-16 pb-12">
			<div class="container mx-auto px-4">
				<div class="max-w-4xl mx-auto">
					<!-- Categoría -->
					<span class="inline-block text-xs font-semibold px-4 py-2 rounded-full mb-4" style="color: #546de5; background-color: #eff4ff;">
						{post.data.category}
					</span>

					<!-- Título -->
					<h1 class="text-3xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
						{post.data.title}
					</h1>

					<!-- Meta información -->
					<div class="flex flex-wrap items-center gap-6 text-sm text-gray-600">
						<div class="flex items-center gap-2">
							<div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center">
								<span class="text-white font-semibold text-sm">
									{post.data.author.charAt(0)}
								</span>
							</div>
							<div>
								<p class="font-semibold text-gray-900">{post.data.author}</p>
								<p class="text-xs text-gray-500">Autor</p>
							</div>
						</div>
						
						<div class="flex items-center gap-2">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
							</svg>
							<span>{formatDate(post.data.date)}</span>
						</div>

						{post.data.readingTime && (
							<div class="flex items-center gap-2">
								<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
								</svg>
								<span>{post.data.readingTime} min de lectura</span>
							</div>
						)}
					</div>
				</div>
			</div>
		</header>

		<!-- Imagen destacada -->
		{post.data.image && (
			<div class="container mx-auto px-4 mb-12">
				<div class="max-w-4xl mx-auto">
					<img 
						src={post.data.image} 
						alt={post.data.title}
						class="w-full rounded-2xl shadow-lg"
					/>
				</div>
			</div>
		)}

		<!-- Contenido del post -->
		<div class="container mx-auto px-4 pb-16">
			<div class="max-w-4xl mx-auto">
				<div class="bg-white rounded-2xl shadow-lg p-8 md:p-12">
					<Content />
				</div>

				<!-- Footer del post -->
				<div class="mt-12 pt-8 border-t border-gray-200">
					<div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
						<div>
							<p class="text-sm text-gray-600">
								Comparte este artículo si te fue útil para tu preparación del ENARM
							</p>
						</div>
						<a 
							href="/blog"
							class="inline-flex items-center gap-2 font-semibold px-6 py-3 rounded-lg transition-all hover:shadow-md"
							style="background-color: #546de5; color: white;"
						>
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
							</svg>
							Volver al Blog
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- Posts relacionados -->
		{relatedPosts.length > 0 && (
			<section class="bg-white py-16">
				<div class="container mx-auto px-4">
					<div class="max-w-4xl mx-auto">
						<h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8">
							Artículos Relacionados
						</h2>
						<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
							{relatedPosts.map(relatedPost => (
								<article class="bg-gray-50 rounded-xl p-6 hover:shadow-lg transition-shadow">
									<h3 class="font-bold text-gray-900 mb-2">
										<a href={`/blog/${relatedPost.slug}`} class="hover:text-blue-600" style="&:hover { color: #546de5; }">
											{relatedPost.data.title}
										</a>
									</h3>
									<p class="text-sm text-gray-600 mb-4 line-clamp-2">
										{relatedPost.data.description}
									</p>
									<div class="flex items-center gap-2 text-xs text-gray-500">
										<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
										</svg>
										<span>{formatDate(relatedPost.data.date)}</span>
									</div>
								</article>
							))}
						</div>
					</div>
				</div>
			</section>
		)}
	</article>

	<Footer />
</Layout>

<style>
	/* Estilos para contenido Markdown */
	:global(.prose) {
		@apply text-gray-700 leading-relaxed;
	}

	:global(.prose h1) {
		@apply text-3xl font-bold mb-6 mt-8 text-gray-900;
	}

	:global(.prose h2) {
		@apply text-2xl font-bold mb-4 mt-6 text-gray-900;
	}

	:global(.prose h3) {
		@apply text-xl font-semibold mb-3 mt-5 text-gray-900;
	}

	:global(.prose p) {
		@apply mb-4 text-justify;
	}

	:global(.prose ul) {
		@apply list-disc list-inside mb-4 space-y-2;
	}

	:global(.prose ol) {
		@apply list-decimal list-inside mb-4 space-y-2;
	}

	:global(.prose li) {
		@apply text-gray-700;
	}

	:global(.prose a) {
		@apply underline transition-colors;
		color: #546de5;
	}

	:global(.prose a:hover) {
		opacity: 0.8;
	}

	:global(.prose blockquote) {
		@apply border-l-4 pl-4 italic my-6 py-2;
		border-color: #546de5;
		background-color: #f8f9ff;
	}

	:global(.prose code) {
		@apply bg-gray-100 text-sm px-2 py-1 rounded;
		font-family: 'Monaco', 'Courier New', monospace;
		color: #d63384;
	}

	:global(.prose pre) {
		@apply bg-gray-900 text-white p-4 rounded-lg overflow-x-auto mb-6;
	}

	:global(.prose pre code) {
		@apply bg-transparent text-white p-0;
	}

	:global(.prose table) {
		@apply w-full mb-6 border-collapse;
	}

	:global(.prose thead) {
		@apply bg-gray-100;
	}

	:global(.prose th) {
		@apply px-4 py-3 text-left font-semibold text-gray-900 border-b;
	}

	:global(.prose td) {
		@apply px-4 py-3 border-b text-gray-700;
	}

	:global(.prose img) {
		@apply rounded-lg shadow-md my-6;
	}

	/* Límite de líneas para descripciones */
	.line-clamp-2 {
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	/* Hover en artículos relacionados */
	:global(article h3 a:hover) {
		color: #546de5 !important;
	}
</style>